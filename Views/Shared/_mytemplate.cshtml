<script type="text/javascript">
    function checkOut() {

        location.href = "/Home/Cart";
    }

    function cartCount() {//getting cart count and Main Catagories at footer

        var d = null;

        var settings = {
            type: "POST",
            dataType: "json",
            url: "/Home/GetCartQuantityAjax",
            data: d,
            success: function (resp) {
                if (resp.valid == true)
                {
                    $("#mainCatagories").html("");

                    $.each(resp.categories, function (index, element) {
                        $('#mainCatagories').append(
                            $('<li>').append(
                            $('<a>').attr('href','/Home/Products/'+element.C_id).append(element.Name)

                        ));
                    });
                }


                if (resp.count != null) {
                    //document.getElementById('number').innerHTML = resp.count;
                    $("#number").text(resp.count);

                    if(resp.count != 0)
                    {
                        $("#box").show();
                    }
                    else {
                        $("#box").hide();

                    }
                }

            },
            error: function (e) {
                alert("error");
                //somethin went wrong
            }
        };

        $.ajax(settings);//asynchronous

        return false;

        $(document).ready(function () {
            var d = null;

            var settings = {
                type: "POST",
                dataType: "json",
                url: "/Admin/GetMainCategoryAjax",
                data: d,
                success: function (resp) {
                    if (resp.valid == true) {
