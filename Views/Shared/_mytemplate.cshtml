                         $("#loss").val(resp.CurrentMohthloss);*/

                    }
                },
                error: function (e) {
                    alert("errorrrr");
                    //somethin went wrong
                }
            };

            $.ajax(settings);//asynchronous

            return false;

        });


    }


    //live search
    $(document).ready(function () {
        $('#liveSearch').autocomplete({
            source: '@Url.Action("SearchLive")'

