</head>
<body>

    @{
        if (ViewBag.login != null)
        {
            <script>
                alert("login");
            </script>

        }

    }


    <div class="login-page">
        <div class="login-main">
            <div class="login-head">
                <h1>Forget Password</h1>
            </div>
            <div class="login-block">
                <form action='' method="post">
                    <input type="email" name="emailP" placeholder="Email" required value="@ViewBag.email">
                    
                    
                    <h4 style="text-align:center; color:red; padding-bottom:0px; padding-top:-20px; font:cursive"> @TempData["validation_forget"]</h4>

                    <input type="submit" name="Sign In" value="Send Email">

                </form>
                
            </div>
        </div>
    </div>
